{
  "name": "@command-center/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "dev:single": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "dev:cluster": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.cluster.ts",
    "dev:silent": "SILENT=true ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "start": "node dist/main.js",
    "start:cluster": "node dist/main.cluster.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
