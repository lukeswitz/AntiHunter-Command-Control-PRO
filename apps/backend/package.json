    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.6",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^7.0.5",
    "@types/sanitize-html": "^2.11.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
