{
  "name": "command-center",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "AHCC": "pnpm dev",
    "AHCC:cluster": "powershell -NoLogo -NoProfile -Command \"$root = Get-Location; $jobs = @(); $jobs += Start-Job -ArgumentList $root { param($r) Set-Location $r; pnpm -C apps/backend dev:cluster }; $jobs += Start-Job -ArgumentList $root { param($r) Set-Location $r; pnpm -C apps/frontend dev }; $jobs | Receive-Job -Wait -AutoRemoveJob\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "seed": "pnpm --filter @command-center/backend prisma:seed",
    "tool:sniffer": "pnpm exec ts-node --transpile-only --project tools/tsconfig.sniffer.json tools/meshtastic-sniffer.ts",
    "update-db": "node scripts/db-update-helper.mjs"
  },
  "dependencies": {
    "serialport": "^12.0.0",
    "@serialport/parser-delimiter": "^12.0.0",
    "argparse": "^2.0.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@types/node": "^20.19.23",
    "@types/argparse": "^2.0.16"
  },
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "esbuild": ">=0.25.0",
      "tmp": ">=0.2.4"
    }
  }
}
