# Backend
NODE_ENV=production
PORT=3000
HTTP_PREFIX=api
LOG_LEVEL=info
ALLOW_FOREVER=true
ALLOW_ERASE_FORCE=false

# Database
DATABASE_URL=postgresql://command_center:command_center@postgres:5432/command_center
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# Serial (leave blank for UI-only usage)
SERIAL_DEVICE=
SERIAL_BAUD=115200
SERIAL_PROTOCOL=meshtastic-like

# Mail (optional)
MAIL_ENABLED=false
MAIL_HOST=
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM="Command Center <no-reply@example.com>"
MAIL_PREVIEW=true

# Security defaults
SECURITY_APP_URL=http://localhost:8080
INVITATION_EXPIRY_HOURS=48
PASSWORD_RESET_EXPIRY_HOURS=12

# Socket / Web
WS_MAX_CLIENTS=200
